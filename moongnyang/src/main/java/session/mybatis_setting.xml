<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<typeAliases>
		<!-- (민승준) -->
		<typeAlias type="com.health.dto.HealthPlaceVo" alias="place" />
		<typeAlias type="com.health.dto.HealthReviewVo"
			alias="review" />

		<!-- 로그인/회원 및 직원 페이지 전용(김은호) -->
		<typeAlias type="com.Login.dto.boardVO" alias="board" />
		<typeAlias type="com.Login.dto.MemberVO" alias="Member" />
		<typeAlias type="com.Login.dto.StaffVO" alias="Staff" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<!-- connecting to Local ORACLE -->
			<dataSource type="POOLED">
				<property name="driver"
					value="oracle.jdbc.driver.OracleDriver" />
				<property name="url"
					value="jdbc:oracle:thin:@localhost:1521:xe" />
				<property name="username" value="scott" />
				<property name="password" value="tiger" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="dbconnect/mybatis_health_mapper.xml" />
	</mappers>
</configuration>


